<!DOCTYPE html>
<html>
  <head>
    <title>MessageBoard</title>
    
<%= csrf_meta_tags %>


    
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    
<%= yield %>

<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %>　 > <%= task.status %></li>
  <% end %>
</ul>

<%= link_to '新規タスクの追加', new_task_path %>

  </body>
</html>